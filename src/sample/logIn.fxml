<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.loginController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane prefHeight="241.0" prefWidth="416.0">
         <children>
            <Button id="btn_signIn" fx:id="btn_signup" layoutX="187.0" layoutY="176.0" mnemonicParsing="false" text="Sign In" />
            <CheckBox layoutX="167.0" layoutY="152.0" mnemonicParsing="false" text="Remember" />
            <TextField fx:id="input_userName" layoutX="98.0" layoutY="82.0" prefHeight="25.0" prefWidth="100.0" promptText="User Name" />
            <Label alignment="BASELINE_RIGHT" layoutX="16.0" layoutY="86.0" prefHeight="17.0" prefWidth="80.0" text="user name:">
               <font>
                  <Font name="Webdings" size="15.0" />
               </font>
            </Label>
            <Label alignment="BASELINE_RIGHT" layoutX="202.0" layoutY="85.0" prefHeight="17.0" prefWidth="80.0" text="password :">
               <font>
                  <Font name="Webdings" size="15.0" />
               </font>
            </Label>
            <Hyperlink id="link_signUp" fx:id="hlink_signup" layoutX="277.0" layoutY="149.0" onAction="#signup" text="Sign Up" underline="true" />
            <PasswordField fx:id="input_password" layoutX="282.0" layoutY="82.0" prefHeight="25.0" prefWidth="107.0" promptText="password" />
         </children>
      </Pane>
   </children>
